    <a class="remove-button" href="<?php echo $this->getDeleteUrl(); ?>" onclick="return confirm('<?php echo Mage::helper('core')->quoteEscape($this->__('Removing the product from your cart â€” are you sure?'), true); ?>');">
        <?php echo $this->__('Remove item') ?>
    </a>
</li>
